<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/relativeLayoutPodcastItems">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/episodeTitle"
        android:id="@+id/textViewTitle"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:layout_toEndOf="@+id/imageViewIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dateTime"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:id="@+id/textViewDate"
        android:textSize="16dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:layout_toEndOf="@+id/imageViewIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playNowText"
        android:id="@+id/textViewPlayNow"
        android:textSize="16dp"
        android:paddingLeft="4dp"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:textColor="#ff9e24"
        android:layout_alignBottom="@+id/imageViewPlayButton"
        android:layout_toRightOf="@+id/imageViewPlayButton"
        android:layout_toEndOf="@+id/imageViewPlayButton" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewPlayButton"
        android:layout_alignBottom="@+id/imageViewIcon"
        android:layout_alignLeft="@+id/textViewDate"
        android:layout_alignStart="@+id/textViewDate"
        android:src="@android:drawable/ic_media_play"
        android:tint="#666666" />




</RelativeLayout>