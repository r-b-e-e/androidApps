<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.parse.starter.EditProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/editBtnID"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/cancelBtnID"
            android:layout_toStartOf="@+id/ProfilePicEditID" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelBtnID"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/LNameEditID" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/FName"
            android:ems="10"
            android:id="@+id/fNameEditID"
            android:editable="true"
            android:hint="FName"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/LName"
            android:ems="10"
            android:id="@+id/LNameEditID"
            android:hint="LName"
            android:layout_below="@+id/fNameEditID"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RadioGroupEditID"
            android:orientation="horizontal"
            android:layout_above="@+id/ProfilePicEditID"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="43dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/MaleEditID"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/FemaleEditID"
                android:layout_marginLeft="50dp" />
        </RadioGroup>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfilePicEditID"
            android:src="@drawable/avatar"
            android:layout_above="@+id/cancelBtnID"
            android:layout_toStartOf="@+id/cancelBtnID"
            android:layout_marginBottom="43dp" />

    </RelativeLayout>

</FrameLayout>
