<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RelativeMesgID">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:id="@+id/txtSenderID"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:id="@+id/txtDateID"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Subject:"
            android:textStyle="bold"
            android:id="@+id/txtSubjectID"
            android:layout_below="@+id/txtSenderID"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtMessageID"
            android:layout_below="@+id/txtSubjectID"
            android:layout_alignParentStart="true"
            android:inputType="textMultiLine" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:id="@+id/btnReplyID"
            android:layout_below="@+id/imageGridID"
            android:layout_toStartOf="@+id/btnDeleteID" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/btnDeleteID"
            android:layout_below="@+id/imageGridID"
            android:layout_alignEnd="@+id/txtDateID" />

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/imageGridID"
            android:layout_below="@+id/txtMessageID"
            android:layout_alignParentStart="true"
            android:numColumns="3" />
    </RelativeLayout>
</LinearLayout>