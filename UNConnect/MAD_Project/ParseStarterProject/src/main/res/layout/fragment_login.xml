<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.parse.starter.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEmail"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPassword"
            android:layout_below="@+id/textEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:hint="@string/password_hint"
            android:inputType="textWebPassword"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/button_login"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_new_account"
            android:id="@+id/button_create_new_account"
            android:layout_below="@+id/button_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp" />

        <ImageView
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:id="@+id/imageViewFacebook"
            android:src="@drawable/facebook"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageViewTwitter"
            android:layout_marginEnd="61dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewTwitter"
            android:src="@drawable/twitter2"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/button_create_new_account" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_using"
            android:textSize="30dp"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageViewFacebook" />
    </RelativeLayout>

</FrameLayout>
